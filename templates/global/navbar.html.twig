<div class="container-fluid bg-secondary">
    <div class="container">
        <nav class="navbar navbar-expand-sm navbar-dark bg-secondary">
            <a class="navbar-brand" href="{{ path('question_index') }}">
                <img src="{{ asset('logo.png') }}" width="30" height="30" alt="">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item{% if actived == 'index' %} active{% endif %}">
                        <a class="nav-link" href="{{ path('question_index') }}">{{ 'nav.questions' | trans }}</a>
                    </li>
                    <li class="nav-item{% if actived == 'post' %} active{% endif %}">
                        <a class="nav-link" href="{{ path('post_list') }}">{{ 'nav.posts' | trans }}</a>
                    </li>
                    <li class="nav-item{% if actived == 'tag' %} active{% endif %}">
                        <a class="nav-link" href="#">{{ 'nav.tags' | trans }}</a>
                    </li>
                </ul>
            </div>
            <form class="form-inline">
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fa fa-search"></i></div>
                    </div>
                    <input type="text" class="form-control" placeholder="Search">
                </div>
            </form>
        </nav>
    </div>
</div>
